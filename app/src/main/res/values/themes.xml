<resources>
    <style name="Theme.Ila" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/teal_Light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/green_Forest</item>
        <item name="colorSecondaryVariant">@color/teal_DarkDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Ila.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ila.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ila.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>