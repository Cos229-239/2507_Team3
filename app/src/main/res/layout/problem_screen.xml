<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circular_blue"
    tools:context=".ui.problems.ProblemFragment">

    <ImageView
        android:id="@+id/ila_icon_top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ila_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/lessonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/teal_Light"
        app:layout_constraintTop_toBottomOf="@id/ila_icon_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/problemNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem 1 of 5"
        android:textSize="18sp"
        android:textColor="@color/teal_Light"
        app:layout_constraintTop_toBottomOf="@id/lessonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/problemNumber"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Problem Display -->
            <TextView
                android:id="@+id/problemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem text will appear here"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="30dp"
                android:padding="10dp"/>

            <!-- Answer Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer:"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="10dp"/>

                <EditText
                    android:id="@+id/answerInput"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter answer"
                    android:inputType="number"
                    android:textSize="18sp"
                    android:background="@drawable/button_border_outline"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Feedback Message -->
            <TextView
                android:id="@+id/feedbackMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:minHeight="40dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Previous Button -->
        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:padding="12dp"
            android:background="@drawable/button_border_outline"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:enabled="false"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:padding="12dp"
            android:background="@drawable/button_border_outline"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
