<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circular_blue">
    
    <ImageView
        android:id="@+id/ila_icon_top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ila_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>
        
    <TextView
        android:id="@+id/messagingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/messagingTitle"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/teal_Light"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ila_icon_top"
        android:layout_marginTop="20dp"/>

    <!-- Messages Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/messagesCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/messagingTitle"
        android:layout_above="@id/messageInputContainer"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sample Messages -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/messagingWelcome"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="20dp"/>

            <!-- Message List Placeholder -->
            <TextView
                android:id="@+id/messageList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/messagingPlaceholder"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Message Input Container -->
    <LinearLayout
        android:id="@+id/messageInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/messageHint"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="12dp"
            android:background="@drawable/button_border_outline"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendButton"
            android:padding="12dp"
            android:background="@drawable/button_border_outline"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</RelativeLayout>
