<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ila.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <action
        android:id="@+id/action_Home_to_Dashboard"
        app:destination="@id/navigation_dashboard"/>
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.ila.ui.dashboard.DashboardFragment"
        android:label="Dashboard" />

        <action
            android:id="@+id/action_dashboardFragment_to_classTopicsFragment"
            app:destination="@id/classTopicsFragment" />

    <fragment
        android:id="@+id/classTopicsFragment"
        android:name="com.ila.ui.classtopics.ClassTopicsFragment"
        android:label="Class Topics" />

        <action
            android:id="@+id/action_classTopicsFragment_to_mathLessonDetailFragment"
            app:destination="@id/mathLessonDetailFragment" />

    <fragment
        android:id="@+id/mathLessonDetailFragment"
        android:name="com.ila.ui.MathLessonDetailsFragment.MathLessonDetailsFragment"
        android:label="Math Lesson Detail" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ila.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>