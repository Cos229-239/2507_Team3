<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ila.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <action
        android:id="@+id/action_to_Home"
        app:destination="@+id/navigation_home" />
    <action
        android:id="@+id/action_to_Messaging"
        app:destination="@id/navigation_Messaging" />
    <action
        android:id="@+id/action_Home_to_Settings"
        app:destination="@id/navigation_Settings"/>

    <action
        android:id="@+id/action_Home_to_Notifications"
        app:destination="@id/navigation_notifications"/>
    <action
        android:id="@+id/action_Home_to_Profile"
        app:destination="@+id/navigation_profile"/>

    <action
        android:id="@+id/action_to_Class_Selection"
        app:destination="@id/navigation_class_selection"/>

    <fragment
        android:id="@+id/navigation_class_selection"
        android:name="com.ila.ui.BackpackDash.ClassFolderSelection"
        android:label="Class Selection" />

        <action
            android:id="@+id/action_ClassSelection_to_Math_Selection"
            app:destination="@id/navigation_math_selection" />

        <action
            android:id="@+id/action_ClassSelection_to_Reading_Selection"
            app:destination="@id/navigation_reading_selection" />

        <action
            android:id="@+id/action_ClassSelection_to_Science_Selection"
            app:destination="@id/navigation_science_selection" />

    <fragment
        android:id="@+id/navigation_math_selection"
        android:name="com.ila.ui.BackpackDash.MathClassFragment.MathLessonsSelection"
        android:label="Math Lessons" />

        <action
            android:id="@+id/action_Math_Selection_to_Math_Class"
            app:destination="@+id/navigation_math_class" />

