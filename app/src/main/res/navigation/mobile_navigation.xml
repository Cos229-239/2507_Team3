<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_Identifier">

    <fragment
        android:id="@+id/navigation_merge_fish"
        android:name="com.ila.minigames.core.mergeFish.MergeFishFragment"
        android:label="MergeFishSelection"
        tools:layout="@layout/merge_fish"/>
    <action
        android:id="@+id/to_merge_fish"
        app:destination="@id/navigation_merge_fish"/>
    <fragment
        android:id="@+id/navigation_Minigames"
        android:name="com.ila.minigames.MiniGamesFragment"
        android:label="MiniGamesSelection"
        tools:layout="@layout/fragment_minigames"/>
    <action
        android:id="@+id/toGames"
        app:destination="@id/navigation_Minigames"/>
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ila.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ila.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile"/>
    <action
        android:id="@+id/action_Home_to_Profile"
        app:destination="@+id/navigation_profile"/>
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ila.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <action
        android:id="@+id/action_Home_to_Notifications"
        app:destination="@id/navigation_notifications"/>
    <fragment
        android:id="@+id/navigation_Settings"
        android:name="com.ila.ui.settings.SettingsFragment"
        android:label="@string/title_Settings"
        tools:layout="@layout/fragment_settings"/>
    <action
        android:id="@+id/action_Home_to_Settings"
        app:destination="@id/navigation_Settings"/>
    <fragment
        android:id="@+id/navigation_Identifier"
        android:name="com.ila.loginUi.identifier.IdentifierFragment"
        android:label="Identifier"
        tools:layout="@layout/fragment_identifier"/>
    <fragment
        android:id="@+id/navigation_Login"
        android:name="com.ila.loginUi.login.LoginFragment"
        android:label="@string/loginTitle"
        tools:layout="@layout/login_screen"/>
    <fragment
        android:id="@+id/navigation_TeacherLogin"
        android:name="com.ila.loginUi.login.TeacherLoginFragment"
        android:label="@string/teacherLoginTitle"
        tools:layout="@layout/teacher_login_screen"/>
    <fragment
        android:id="@+id/navigation_TeacherDashboard"
        android:name="com.ila.ui.dashboard.TeacherDashboardFragment"
        android:label="@string/teacherDashboardTitle"
        tools:layout="@layout/teacher_dashboard_screen"/>
    <fragment
        android:id="@+id/navigation_Messaging"
        android:name="com.ila.ui.messaging.MessagingFragment"
        android:label="@string/messagingTitle"
        tools:layout="@layout/messaging_screen"/>
    <fragment
        android:id="@+id/navigation_ProgressReports"
        android:name="com.ila.ui.progress.ProgressReportsFragment"
        android:label="Progress Reports"
        tools:layout="@layout/progress_reports_screen"/>
    <action
        android:id="@+id/action_to_Identifier"
        app:destination="@id/navigation_Identifier"/>
    <action
        android:id="@+id/action_to_Login"
        app:destination="@id/navigation_Login"/>
    <action
        android:id="@+id/action_to_TeacherLogin"
        app:destination="@id/navigation_TeacherLogin"/>
    <action
        android:id="@+id/action_to_TeacherDashboard"
        app:destination="@id/navigation_TeacherDashboard"/>
    <action
        android:id="@+id/action_to_Messaging"
        app:destination="@id/navigation_Messaging"/>

    <action
        android:id="@+id/action_to_ProgressReports"
        app:destination="@id/navigation_ProgressReports"/>
    <action
        android:id="@+id/action_to_Home"
        app:destination="@id/navigation_home"/>
</navigation>