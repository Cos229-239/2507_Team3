<!--        android:id="@+id/navigation_math_class"-->
<!--        android:name="com.ila.ui.BackpackDash.MathClassFragment.MathClassDetailsFragment"-->
<!--        android:label="Math Class" />-->

    <fragment
        android:id="@+id/navigation_reading_selection"
        android:name="com.ila.ui.BackpackDash.ReadingClassFragment.ReadingLessonsSelection"
        android:label="Reading Lessons" />

        <action
            android:id="@+id/action_Reading_Selection_to_Reading_Class"
            app:destination="@+id/navigation_reading_class" />

<!--    <fragment-->
<!--        android:id="@+id/navigation_reading_class"-->
<!--        android:name="com.ila.ui.BackpackDash.ScienceClassFragment.ReadingLessonsDetails"-->
<!--        android:label="Reading Class" />-->

    <fragment
        android:id="@+id/navigation_science_selection"
        android:name="com.ila.ui.BackpackDash.ScienceClassFragment.ScienceLessonsSelection"
        android:label="Science Lessons" />

        <action
            android:id="@+id/action_Science_Selection_to_Science_Class"
            app:destination="@+id/navigation_science_class" />

<!--    <fragment-->
<!--        android:id="@+id/navigation_science_class"-->
<!--        android:name="com.ila.ui.BackpackDash.ScienceClassFragment.ScienceLessonsDetails"-->
<!--        android:label="Science Class" />-->

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ila.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <action
        android:id="@+id/action_notifications_to_classes"
        app:destination="@id/navigation_class_selection"/>

    <fragment
        android:id="@+id/navigation_identifier"
        android:name="com.ila.loginUi.identifier.IdentifierFragment"
        android:label="Identifier"
        tools:layout="@layout/fragment_identifier" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ila.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/navigation_Settings"
        android:name="com.ila.ui.settings.SettingsFragment"
        android:label="@string/title_Settings"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.ila.loginUi.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/login_screen" />

    <fragment
        android:id="@+id/navigation_Messaging"
        android:name="com.ila.ui.messaging.MessagingFragment"
        android:label="@string/messagingTitle"
        tools:layout="@layout/messaging_screen"/>

    <fragment
        android:id="@+id/navigation_teacher_dash"
        android:name="com.ila.ui.BackpackDash.TeacherDashboardFragment"
        android:label="Teacher's Dashboard"
        tools:layout="@layout/teacher_dashboard_screen" />

    <fragment
        android:id="@+id/navigation_teacher_login"
        android:name="com.ila.loginUi.login.TeacherLoginFragment"
        android:label="Teacher Login"
        tools:layout="@layout/teacher_login_screen" />

